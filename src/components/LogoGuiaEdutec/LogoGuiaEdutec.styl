@import '../../variables.styl'



.logo__guiaedutec
  &.dark
    h1
      color $home-color-edutec-logo-2
    p
      color $home-color-edutec-logo-2
    span
      border-bottom-color $home-color-edutec-logo-2


  width auto
  display inline-flex
  flex-direction column
  > div
    display inline-flex
    align-items center
    gap 10px
    >div
      > p
        color $color-edutec-logo-2
        padding-top 11px
        font-size 0.7rem
  > p
    display inline-flex
    justify-content flex-end
    font-size 0.7rem

  img
    width auto
    height 66px
  h1
    font-family $font-family-edutec-logo-2
    font-size 1.9rem
    color $color-edutec-logo-2
    

    span
      font-family $font-family-edutec-logo-1
      border-bottom 3px solid $border-color-edutec-logo-1
      color $primary-color
  p
    text-align right
    color $color-edutec-logo-2


.logo__guiaedutec_small
  > div
    gap 7px
    > div
      > p
        padding-bottom 2px !important
        font-size 0.85rem

  h1
    font-size 0.9rem
    span
      border-bottom 2px solid $border-color-edutec-logo-1
  p
    text-align right
    font-size 0.70rem
