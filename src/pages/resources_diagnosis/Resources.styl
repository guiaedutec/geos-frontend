.alert
  padding 0.75rem 1.25rem
  margin-bottom 1rem
  border 1px solid transparent
  border-radius 0.25rem
  background-color #f2dede
  border-color #faf2cc
  color #ff180c
  border-top-color #f7ecb5

.notificacao
  display flex
  justify-content center
  .gestor
    padding 0.75rem 1.25rem
    border 1px solid transparent
    border-radius 0.25rem
    border-top-color #f7ecb5
    background-color #d9edf7
    border-color #bcdff1
    color #31708f

.alert hr
  border-top-color #f7ecb5

.container__main__admin
  padding 2rem 1rem

.column__description
  padding 10px 20px

.subcontainer
  display flex
  width 100%
  justify-content: space-around
  align-items center

.container__description
  padding 20px 10px 10px
  font-size 14px
  background-color #efefef
  margin -15px 25px 10px 25px

.content__title
  font-size 18px
  margin-bottom 20px

.content__paragraphs
  p
    font-size 15px
    margin-bottom 10px

.content__title__obs
  font-size 13px

.school_title
  padding 5px
  text-align center
  display flex

  h2
    font-size 18px
    font-weight 700
    padding: 5px 15px;

  button
    margin 0px 20px
    font-size 0.8rem

.accordion
  border 0
  margin-top 1rem

  .accordion__item
    border-bottom 10px solid transparent

    &:last-child
      border-bottom 0

    .accordion__title
      cursor pointer
      color $accordion-title-color
      background $accordion-title-bg
      padding $accordion-title-padding
      border-width $accordion-title-border-width
      border-style $accordion-title-border-style
      border-color $accordion-title-border-color
      border-radius $accordion-title-border-radius

      &[aria-selected="true"]
        .accordion__header
          .arrow
            transform rotate(180deg)

      .accordion__header
        display flex
        align-items center

        .arrow
          width 14px
          margin-right 15px
          transition all .3s ease-out

        .accordion__name
          font-weight bold
          font-size 1.2em

        .accordion__description
          font-style italic

    .accordion__body
      background $accordion-body-bg
      padding $accordion-body-padding
      border-width $accordion-body-border-width
      border-style $accordion-body-border-style
      border-color $accordion-body-border-color
      border-radius $accordion-body-border-radius

// Nova estrutura
.steps
  .step
    padding 30px 0
    display flex
    align-items center
    justify-content space-between

    + div
      border-top 1px solid #DDDDDD

    > span
      font-size 50px
      font-weight bold
      color $step-color-text-number

    > div
      flex 1
      margin 0 30px

      strong
        display block
