@import '../../variables.styl';


.form__label
  color #69707a
  margin 10px 0 0
  &.sharing
    margin-top 20px

.form__input
  margin 10px 0 0

.form__select
  width 100%

  select
    width 100%
    border-radius 30px
    color #69707a

.form__radio
  margin-bottom 10px
  padding-top 0
  padding-bottom 0
  margin-left 0!important
  input[type='radio']
    outline none
    margin-right 10px

  input:checked:before
      background $primary-color!important

.form__checkbox
  outline none
  margin-right 10px

.form__submit_button, .button_share
  margin-top 25px



.followup_container
  padding 0 30px
  padding-top 10px

.followup_stats__container
  padding 0 25px

.followup_stats__answers_stat
  padding 0 30px

.followup__info__table_container
  //overflow-x scroll
  margin-top 50px
  margin-bottom 50px

.followup__info__table__principal_th
  i:first-child
    margin-right 10px
    margin-left @margin-right

.followup__info
  display flex
  justify-content center
  align-items center

.followup__info_number
  display flex
  flex-direction column
  justify-content center
  align-items center

.followup__info__table
  background-color transparent
  max-width 100%

  th, td
    vertical-align middle
    text-align center

  td
    position relative

  th
    text-transform uppercase
    font-weight 300
    cursor pointer
    outline none

    transition color .3s ease-out, border-top-color .5s ease-out, border-bottom-color .5s ease-out

.followup__info__table_highlightedTh
  border-top 2px solid $primary-color !important
  border-bottom @border-top
  color $primary-color !important
  font-weight 700 !important

.followup__info__table__dot_yes, .followup__info__table__dot_no
  border-radius 50%
  width 10px
  height @width
  display inline-table

.followup__info__table__dot_yes
  background-color $primary-color

.followup__info__table__dot_no
  background-color #a5a5a5

.total_schools
  font-size 1.2em
  margin-bottom 10px
  .number
    font-weight bold

.filter
  flex-grow .5
  input[type='text']
    border-radius 5px


$pointer-size = 10px
.followup__info__sample
  background-color $primary-color
  position relative
  padding 50px 0

  span
    color #fff
    text-transform lowercase

  &:after
    content ''
    position absolute
    width $pointer-size
    height @width
    right -($pointer-size*2)
    border $pointer-size solid transparent
    border-left $pointer-size solid @background-color

@media(min-width 600px)
  .followup_info__table_menu_sticky
    width 100%
    position fixed
    z-index 1000
    padding 15px
    top 0
    left 0
    margin 0
    background-color #fff

@media(max-width: 769px)
  .followup_container
    padding-left 0
    padding-right 0

  .followup__info
    flex-direction column
    align-items space-around

  .followup__info__sample
    padding 15px 50px
    margin 10px 0

    &:after
      border-left-color transparent
      border-top-color $primary-color
      right 50%
      margin-right -($pointer-size)
      bottom -($pointer-size*2)

  .followup_stats__answers_stat:not(:first-child)
    margin-top 15px

