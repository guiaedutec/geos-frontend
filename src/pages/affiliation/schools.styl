.modal
  position relative
  margin 0 auto
  top 5%
  width 600px
  border-radius 6px
  box-sizing border-box
  background-color white
  &.modal__lg
    max-width 910px

.overlay
  position fixed
  z-index 10000
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(20,30,61,.6)

.modal__header
  padding 15px
  border-bottom 1px solid #e5e5e5

  h4
    font-size 18px

.modal__body
  position relative
  margin 0
  padding 15px
  overflow-wrap break-word
  overflow-y auto
  max-height 400px

  ul
    display block
    list-style-type disc
    -webkit-margin-before 1em
    -webkit-margin-after 1em
    -webkit-margin-start 0px
    -webkit-margin-end 0px
    -webkit-padding-start 40px

    li
      display list-item
      text-align -webkit-match-parent

  p
    display block
    -webkit-margin-before 1em
    -webkit-margin-after 1em
    -webkit-margin-start 0px
    -webkit-margin-end 0px

.modal__footer
  padding 15px
  text-align right
  border-top 1px solid #e5e5e5

.instructions
  font-size 16px
  color $dark-blue

  a
    font-weight 700
    text-decoration underline
    color: #54B847;
    cursor: pointer;
    text-decoration-color: $pink;
    transition: none 86ms ease-out;



