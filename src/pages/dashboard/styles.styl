// .layout
//

.buttons
  display flex
  gap 15px


.collapseBody
  display flex
  flex-direction column
  gap 20px

.table
  width 100%
  border 2px solid $primary-color

  th, td
    padding 10px
    border 1px solid #d3d3d3
  th
    width 150px


.btnDownload
   font-weight 400
.devolutive__title
    color #69707a

.form
  padding 0 80px

.form__label
  color #69707a

.form__select

  select
    width 100%
    border-radius 30px
    color #69707a

.form__radio
  input[type='radio']
    outline none
    margin-right 10px

  input:checked:before
      background green !important

.form__submit_button, .button_share
  margin-top 25px

.h1
  font-size 20px

.div_dashboard
  border 1px solid

.div
  display inline-block
  width 20%

.div_size
  width 100%

.margin_bottom
  margin-bottom 10px

.margin_top
  margin-top 10px

.border
  border 1px solid

.title
  text-align center;
  font-size 2.0rem
  background-color #131d3c
  color white

.border_bottom
  border-bottom 1px solid

.border_top
  border-top 1px solid

.section
  margin-top 20px
  margin-bottom 20px

.padding_tableline
  padding 10px

.text_align_center
  text-align center

.div_line
  display inline-block
  width 14%

.table_title
  font-weight bold
  display flex
  align-items flex-end
  justify-content space-around




// Painel diagnostico



.container_table
  overflow auto
  max-height 500px

.last_container
  margin-bottom 5rem

h1.inside
  font-size 1.4em
  font-weight bold
  text-transform uppercase
  margin-top 30px

h2
  font-size 1.2em
  font-weight bold
  margin 10px 0
  .loading
    margin-left 12px
    font-size 1em

hr
  margin-bottom 30px

.cursor_default
  cursor default

.less
  background-color #ff0042!important
  color #ffffff
  strong
    color #ffffff

.first_column
  padding-left 0

.container
  margin-top 2rem
  margin-bottom 2rem
  .is_active
    a
      background-color #f7f7f7!important

  .card
    margin-bottom 2rem
    .campos
      display flex
      align-items center
      .label
        margin-right 10px
        &.label:not(:first-child)
          margin-left 10px
    .btn
      margin-left 1rem

  .conteudo
    background-color #f7f7f7
    border 1px solid #dbdbdb
    border-top 0
    .quantidade_total
      div
        display inline-block
    .loading_center
      justify-content center
      align-items center
      display flex
      height 90px
    .resumo
      display block
      .pedagogica,
      .cidadania,
      .desenvolvimento
        h2
          color #ffffff
          border-top-left-radius 10px
          border-top-right-radius 10px
          padding-top 10px
          padding-bottom 10px
          margin-bottom 0
      .pedagogica
        h2
          background-color #6d0f59
        .niveis
          li
            .densidade
              background-color #6d0f59
      .cidadania
        h2
          background-color #068587
        .niveis
          li
            .densidade
              background-color #068587
      .desenvolvimento
        h2
          background-color #4198df
        .niveis
          li
            .densidade
              background-color #4198df
      .niveis
        li
          align-items center
          position relative
          color black
          &:last-child
            border-bottom-left-radius 10px
            border-bottom-right-radius 10px
            .densidade
              border-bottom-left-radius 10px
              border-bottom-right-radius 10px
          .densidade
            position absolute
            width 100%
            height 100%
            z-index 0
          .nivel
            z-index 1
            font-weight bold
          .valor
            z-index 1
            font-size 1.4em
    .tabela
      .nivel
        font-weight bold
        text-align right
        border 1px dotted gray!important
      &.pedagogica
        h2
          color #6d0f59
        .valor
          .celula
            background-color #6d0f59
          .numeros
            .porcentagem
              background-color #6d0f59
        .ppi
          color #6d0f59
      &.cidadania
        h2
          color #068587
        .valor
          .celula
            background-color #068587
          .numeros
            .porcentagem
              background-color #068587
        .ppi
          color #068587
      &.desenvolvimento
        h2
          color #4198df
        .valor
          .celula
            background-color #4198df
          .numeros
            .porcentagem
              background-color #4198df
        .ppi
          color #4198df
      .valor
        position relative
        display flex
        align-items center
        justify-content center
        .celula
          &.transparent
            opacity 0!important
          text-align center
          font-weight bold
          position absolute
          width 100%
          height 100%
          left 0
          z-index 0
          top 0
        .numeros
          background-color rgba(255,255,255,0.5)
          color #000000
          padding-left 10px
          font-weight bold
          border-radius 7px
          position absolute
          z-index 1
          top auto
          left auto
          display flex
          align-items center
          .porcentagem
            margin-left 10px
            display flex
            background-color #777
            font-size 0.7em
            border-radius 7px
            align-items center
            color #ffffff
            justify-content center
            height 25px
            padding 0 7px
    .ver_dados
      display block
      padding-right 0
    .titulo_detalhamento
      margin-top 2rem
    .legenda_densidade
      margin-top -20px
      font-size 0.9em
      display block
      h3
        font-weight bold
      .escala
        width 50px
        height 11px
        margin-right 5px
        display inline-block
        background-image linear-gradient(to right, rgba(109, 15, 89, .1), #131D3C)
    [data-ref="pedagogica"]
      .legenda_densidade
        .escala
          background-image linear-gradient(to right, #f1e7ef, #6d0f59)
    [data-ref="cidadania"]
      .legenda_densidade
        .escala
          background-image linear-gradient(to right, #e7f3f3, #068587)
    [data-ref="desenvolvimento"]
      .legenda_densidade
        .escala
          background-image linear-gradient(to right, #ecf5fc, #4198df)

  .cards
    .nav_collapse
      height 1.8rem
      font-size 1.4em
      margin-bottom 0.4rem
    .card_collapse
      margin-bottom 1rem
      .card_content
        padding 0.5rem
        .type
          background-color #131d3c
          padding 0.2rem 1rem
          color #fff
          border-radius 1rem
          margin-bottom 0.4rem
          display inline-block
        .is_flex
          display flex
          align-items center
          justify-content center
        .column
          border-left 1px solid lightgray
          &:first-child,
          &:nth-child(4n+1)
            border-left 0
        .municipal
          border-top 1px solid lightgray
          margin-top 0.5rem
          .column
            border-bottom 1px solid lightgray

