@import '../../variables.styl';

.remove
  color red
  display flex
  gap 8px

.title_section
  font-size 1.7em
  text-transform uppercase
  color $primary-color
  font-weight bold

.form__label
  color #69707a
  margin 10px 0 0
  &.sharing
    margin-top 20px

.form__input
  margin 10px 0 0

.form__select
  width 100%

  select
    width 100%
    border-radius 30px
    color #69707a

.form__radio
  margin-bottom 10px
  padding-top 0
  padding-bottom 0
  margin-left 0!important
  input[type='radio']
    outline none
    margin-right 10px

  input:checked:before
    background $primary-color !important

.form__checkbox
  outline none
  margin-right 10px

.field__datepicker
  padding-left 30px!important

.field__calendar
  position absolute
  left 10px
  top 10px
  color $primary-color
  z-index 9

.field__warning
  position absolute
  right 6px
  top 3px
  color #a7a9ab
  z-index 9
  background #ffffff
  padding 6px
  border-radius 20px

.is_danger
  border 1px solid #ff3860
  border-radius 10px

.update_message
  margin 6px 0 0 20px
  display inline-block

.terms_of_use
  margin-top 20px
  height 210px
  overflow-y scroll
  border 1px solid #eee
  padding 10px 20px 20px 10px
  color gray
  text-align justify
  header
    p
      flex-shrink 1
      font-size 1.4rem
      line-height 1.3
      text-align center
  ol
    counter-reset item
    margin-top 10px
    padding-inline-start 15px
  li
    display block
    margin-bottom 20px
    &:before
      margin-right 5px
      content counters(item, ".") " "
      counter-increment item

.shared
  h2
    font-weight bold
    margin 2rem 0 .8rem
  .notification
    margin-top 0.5rem
    padding 0.8rem
