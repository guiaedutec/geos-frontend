@import '../../variables.styl'

.main
  background $mainboard-bg
  padding $mainboard-padding
  color $mainboard-color

.container
  margin-top 30px
  margin-left 0 !important
  margin-right 0 !important

  strong
    color white

.box_deactive
  opacity 0.3
  background white

.tutor
  margin-left 2em
  margin-bottom 2em
  font-size 15pt
  cursor pointer

.main__container
  padding 80px 40px 30px 40px

.columns_board
  z-index 1
  position relative
  padding 0 30px

  &:last-child
    padding-bottom 2rem

  .title
    position relative
    padding-bottom 5px
    margin-bottom 30px
    color $dark-blue

  .title:before
    content ''
    position absolute
    width 70px
    height 5px
    background-color $primary-color
    bottom -8px
    left 0px

.title_board_bg
  background-image url(../../../public/images/mainboard_title_card_bg.png)
  background-size 100% 100%
  height 450px
  width 40%
  position absolute
  z-index 0

.title_board
  margin 25px 0 0
  //height 350px

  h1
    font-size 24px
    font-weight 700
    padding-bottom 20px

  p
    margin-right 70px

  a
    color $dark-blue
    text-decoration underline
    background-color #7db742
    padding 0px 4px

