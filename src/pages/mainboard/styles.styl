.content_board_name
  background-color $green
  margin-left 20px
  margin-top 20px
  padding 5px 10px
  width 100%
  font-size 16px
  position relative

  a
    color white

  a:hover
    color white
    font-weight 700

.content_board_text
  padding 10px 20px
  width 100%
  font-size 12px
  position relative
  color $dark-blue

.disabled
  background-color rgba(60, 60, 60, 0.7)
  -webkit-clip-path polygon(17% 0, calc(100% - 20px) 0%, calc(100% - 20px) 6%, 100% 6%, 100% 80%, 100% 70%, calc(100% - 20px) 70%, calc(100% - 20px) 100%, 0 100%, 0 100%, 0 11.8%)
  clip-path polygon(17% 0, calc(100% - 20px) 0%, calc(100% - 20px) 6%, 100% 6%, 100% 80%, 100% 70%, calc(100% - 20px) 70%, calc(100% - 20px) 100%, 0 100%, 0 100%, 0 11.8%)
  z-index 20
  position absolute
  height 310px
  width calc(25% - 60px)
  margin 0px -20px 0px 0px

.admin_principal
  padding 40px 0
  h1
    font-size 2em
    font-weight bold
    text-transform uppercase
    position relative
    margin-bottom 30px
    &:after
      content ''
      position absolute
      bottom 0
      left 0
      width 50%
      height 5px
      background-color $primary-color
      margin-bottom -10px
  h2
    font-weight bold
    font-size 1.4em
    text-transform uppercase


.title_section
  font-size 1.4em
  text-transform uppercase
  color white
  text-align center
  font-weight bold

.visao
  .header
    background-color $products-visao-bg
    p
      color $products-visao-color

.formacao
  .header
    background-color $products-formacao-bg
    p
      color $products-formacao-color

.red
  .header
    background-color $products-red-bg
    p
      color $products-red-color

.infra
  .header
    background-color $products-infra-bg
    p
      color $products-infra-color

.header
  p
    color white
    font-size 1.25em

.dimensions_box
  margin 10px

.box
  margin 10px
  padding 0px
  background-color #ffffffdd

.main_card_footer
  background $mainboard-card-footer-bg
  border-width $mainboard-card-footer-border-width
  border-style $mainboard-card-footer-border-style
  border-color $mainboard-card-footer-border-color

  > p
    padding $mainboard-card-footer-p-padding
    display $mainboard-card-footer-p-diplay
    justify-content $mainboard-card-footer-p-justify-content

    a
      display $mainboard-card-footer-p-a-display
      background $mainboard-card-footer-p-a-bg
      padding $mainboard-card-footer-p-a-padding
      border-radius $mainboard-card-footer-p-a-border-radius
      color $mainboard-card-footer-p-a-color

      &:hover
        color $mainboard-card-footer-p-a-color-hover
        background $mainboard-card-footer-p-a-bg-hover


.card
  box-shadow $mainboard-card-box-shadow
  height 100%
  display flex
  flex-direction column
  justify-content space-between
  border-radius $mainboard-card-border-radius
  overflow: hidden;

  .subtitle
    font-size 0.9rem


.button_link
  text-transform uppercase

// Products
.products_container
  background $products_container-bg
  margin $products_container-margin
  padding $products_container-padding
  flex-wrap wrap
  align-items: stretch;

  .products_column
    width $products-column-width

    @media screen and (max-width: $products-column-media-screen-max-width)
      width 100%

    .products_column_content
      height 100%
      box-shadow none
