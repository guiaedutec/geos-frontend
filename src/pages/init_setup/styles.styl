@import '../../variables.styl';

form
  .title_section
    font-size 1.4em
    text-transform uppercase
    color $primary-color
    font-weight bold

  .inputContainer
    display flex
    margin 5px 0px 3px 0px

  .error
    font-size 0.75rem
    color #ff3860
    padding-top 0.5rem


  .inputFile
    padding 8px 20px
    border-radius 17.5px
    display flex
    flex-direction column
    background-color $primary-color
    color white
    font-weight 700
    cursor pointer
    input
      display none

    &:hover
      background-color $primary-7

  h1
    font-weight 700
    font-size 1rem
    color #69707a
    margin-bottom 5px

  button
    padding 10px 20px
    border-radius 17.5px
    border none
    display flex
    flex-direction column
    background-color $primary-color
    color white
    cursor pointer
    font-size 1rem

    &:hover
      background-color $primary-7






