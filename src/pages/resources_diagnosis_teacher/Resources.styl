.resources__image
  height 90px

  @media screen and (max-width: 850px)
    height 100px

.resources__buttons
  display flex
  flex-direction column

.tutor
  color black
  font-size 15pt
  cursor pointer

.resources__buttons__button
  min-height 50px
  min-width 300px
  justify-content flex-start
  padding-left 75px
  font-size 0.8rem
  font-weight bold
  margin 10px 0
  text-transform uppercase

  i
    top 12px
    left 25px
    transform scale(0.70)
    transform-origin 0 0

.resources__buttons__process
  height 66px
  width 100%
  padding-left 70px
  text-align left
  justify-content flex-start
  font-size 0.8em
  font-weight bold
  border-width 0!important
  border-radius 50px
  i
    top 0!important
    left 0!important
