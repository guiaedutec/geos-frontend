{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "rules": {
    "import/no-unresolved": [2, { "ignore": ["\\~*"] }],
    "space-before-blocks": 0,
    "consistent-return": 0
  },

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}
